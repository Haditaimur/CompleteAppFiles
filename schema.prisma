generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model MaintenanceRequest {
  id          String   @id @default(cuid())
  roomNumber  String
  category    String
  priority    String
  description String
  status      String   @default("pending")
  createdBy   String
  assignedTo  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  resolvedAt  DateTime?
  notes       String?

  @@index([status])
  @@index([roomNumber])
  @@index([createdAt])
}
